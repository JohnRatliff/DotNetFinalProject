@model Login
@{
    ViewBag.LayoutLoggedIn = ViewBag.LoggedIn;
    ViewBag.LayoutLoggedInUserFirstName = ViewBag.LoggedInUserFirstName;
    ViewBag.LayoutTitle = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-4">
    <div class="col-sm-12 col-md-3 col-lg-3"></div>
    <div class="col-sm-12 col-md-6 col-lg-6">

        <!-- Login Title: Begin -->
        <div class="row">
            <div class="col-sm-12 col-md-10 col-lg-10">
                <h1>Login</h1>
            </div>
            <div class="col-sm-12 col-md-2 col-lg-2">
                <div class="mt-20">
                    <a asp-controller="Login" asp-action="Registration">Register</a>
                </div>
            </div>
        </div>
        <!-- Login Title: Ends -->

        <!-- Login Form: Begin -->
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <form asp-controller="Login" asp-action="LoginSave" method="post">
                    <div class="form-group">
                        <label class="col-form-label" asp-for="LoginEmail"></label>
                        <div>
                            <input class="form-control" asp-for="LoginEmail" autofocus="LoginEmail">
                        </div>
                        <span class="color-error" asp-validation-for="LoginEmail"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="LoginPassword"></label>
                        <div>
                            <input class="form-control" asp-for="LoginPassword">
                        </div>
                        <span class="color-error" asp-validation-for="LoginPassword"></span>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn  btn-primary btn-md">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Login Form: End -->
    </div>
    <div class="col-sm-12 col-md-3 col-lg-3"></div>
</div>
